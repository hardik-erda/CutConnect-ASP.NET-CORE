@{
    ViewData["Title"] = "Cart";
}

<div>
    <div class="container">
        <div class="list-group">
        <asp:Panel ID="CartItemsPanel" >
        </asp:Panel>
            <div class="list-group-item w-75 m-auto mt-5" >
                <div class="align-items-center d-flex">
                    <p class="me-auto h3 ">Total</p>
                    <p class="h4 ms-auto text-success opacity-75" id="TotalCartPrice" visible="false" ></p><p>Rs</p>
                </div>
            </div>
        </div>
        <div class="d-flex">
        <button class="btn btn-dark me-auto mt-5"  ID="BookServicesBtn" Text="Book these now" OnClick="BookServicesBtn_Click"></button>
        <button class="btn btn-danger me-auto mt-5" Visible="false" ID="CloseBookServicesBtn" Text="X" OnClick="CloseBookServicesBtn_Click"></button>
        </div>
        <div class="container d-flex m-auto">
        <asp:Panel ID="BookingFormPanel" Visible="false" >
                            <h2>Fill the Details</h2>
                            <p class="card-text">
                                Appointment Date and Time :
                                <input ID="appointmentdatetime"  type="datetime-local"   required/>
                            </p>
                            <button class="btn btn-success" ID="ConfirmBookingBtn">Confirm Booking</button>
        </asp:Panel>
        
        </div>
</div>

</div>